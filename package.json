{
  "name": "rivaya",
  "version": "1.0.0",
  "description": "RIVAYA - AI-powered group management platform",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/**\" dev",
    "build": "pnpm --parallel --filter \"./apps/**\" build",
    "test": "pnpm --parallel --filter \"./apps/**\" test",
    "lint": "pnpm --parallel --filter \"./apps/**\" lint",
    "clean": "pnpm --parallel --filter \"./apps/**\" clean",
    "db:generate": "pnpm --filter @rivaya/api db:generate",
    "db:migrate": "pnpm --filter @rivaya/api db:migrate",
    "db:seed": "pnpm --filter @rivaya/api db:seed"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}


