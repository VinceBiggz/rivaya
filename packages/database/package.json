{
  "name": "@rivaya/database",
  "version": "1.0.0",
  "description": "RIVAYA Database - Prisma schema, migrations, and utilities",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema.mjs",
      "require": "./dist/schema.js",
      "types": "./dist/schema.d.ts"
    },
    "./migrations": {
      "import": "./dist/migrations.mjs",
      "require": "./dist/migrations.js",
      "types": "./dist/migrations.d.ts"
    }
  },
  "files": [
    "dist/**",
    "prisma/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:diff": "prisma migrate diff",
    "db:validate": "prisma validate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@supabase/supabase-js": "^2.38.4",
    "zod": "^3.22.4",
    "@rivaya/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "eslint": "^8.53.0",
    "prisma": "^5.7.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "tsx ./src/seed.ts"
  }
}
