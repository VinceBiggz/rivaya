#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run build
echo "🏗️ Running build..."
pnpm build

# Run E2E tests
echo "🧪 Running E2E tests..."
pnpm e2e

# Run security audit
echo "🔒 Running security audit..."
pnpm audit --audit-level moderate

echo "✅ Pre-push checks passed!"
